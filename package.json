{
    "name": "set-steps",
    "version": "0.2.1",
    "license": "MIT",
    "author": "Lennart Gerken",
    "description": "Automatically inject test steps into Playwright actions.",
    "keywords": [
        "e2e",
        "playwright",
        "report",
        "reporting",
        "test",
        "test-automation",
        "test-steps"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/lennartgerken/set-steps.git"
    },
    "bugs": {
        "url": "https://github.com/lennartgerken/set-steps/issues"
    },
    "type": "module",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        "types": "./dist/esm/index.d.ts",
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.cjs"
    },
    "module": "./dist/esm/index.js",
    "main": "./dist/cjs/index.cjs",
    "files": [
        "dist"
    ],
    "scripts": {
        "pretty": "prettier . --write",
        "pretty-check": "prettier . --check",
        "lint": "eslint .",
        "test": "vitest run",
        "build": "rollup -c"
    },
    "peerDependencies": {
        "@playwright/test": "^1.56.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@rollup/plugin-typescript": "^12.1.4",
        "@types/node": "^24.8.1",
        "eslint": "^9.38.0",
        "prettier": "^3.6.2",
        "rollup": "^4.52.5",
        "tslib": "^2.8.1",
        "typescript-eslint": "^8.46.1",
        "vitest": "^3.2.4"
    }
}
