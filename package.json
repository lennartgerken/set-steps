{
    "name": "set-steps",
    "version": "0.3.4",
    "license": "MIT",
    "author": "Lennart Gerken",
    "description": "Automatically inject test steps into Playwright actions and extend core APIs with custom methods.",
    "keywords": [
        "e2e",
        "playwright",
        "report",
        "reporting",
        "test",
        "test-automation",
        "test-steps"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lennartgerken/set-steps.git"
    },
    "bugs": {
        "url": "https://github.com/lennartgerken/set-steps/issues"
    },
    "type": "module",
    "types": "./dist/esm/index.d.ts",
    "exports": {
        "types": "./dist/esm/index.d.ts",
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.cjs"
    },
    "module": "./dist/esm/index.js",
    "main": "./dist/cjs/index.cjs",
    "files": [
        "dist"
    ],
    "scripts": {
        "pretty": "prettier . --write",
        "pretty-check": "prettier . --check",
        "lint": "eslint .",
        "build": "rollup -c",
        "test-type-check": "npx tsc -p ./tests/playwright/tsconfig.json --noEmit",
        "serve-test": "serve tests/playwright/public -l 3000",
        "test": "vitest run"
    },
    "peerDependencies": {
        "@playwright/test": "^1.56.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@rollup/plugin-typescript": "^12.3.0",
        "@types/node": "^24.10.1",
        "eslint": "^9.39.1",
        "prettier": "^3.6.2",
        "rollup": "^4.53.3",
        "serve": "^14.2.5",
        "tslib": "^2.8.1",
        "typescript-eslint": "^8.47.0",
        "vitest": "^4.0.13"
    }
}
